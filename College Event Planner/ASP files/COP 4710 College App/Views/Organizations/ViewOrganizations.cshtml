                                <div class="menu-info">
                                    <h4 class="control-sidebar-subheading">2 Events were cancelled last week</h4>

                                    <p>Last modification 5 minutes ago</p>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <!-- /.control-sidebar-menu ->>

                    <!-- /.control-sidebar-menu -->

                </div>
                <!-- /.tab-pane -->
                <!-- /.tab-pane -->
            </div>
        </aside>
        <!-- /.control-sidebar -->
