                            <span class="pull-right-container">
                                <small class="label pull-right bg-green">@Session["numEvents"]</small>
                            </span>
                            <ul class="treeview-menu">
                                <li><a href="~/Events/ViewEvents"><i class="fa fa-circle-o"></i> View</a></li>
                                <li><a href="~/Events/AddEvents"><i class="fa fa-circle-o"></i>Add</a></li>
                                <li><a href="~/Events/ModifyEvents"><i class="fa fa-circle-o"></i> Modify</a></li>
                                <li><a href="~/Events/JoinEvents"><i class="fa fa-circle-o"></i> Join</a></li>
                            </ul>
                        </a>
                    </li>

                    <li>
                        <a href="pages/calendar.html">
                            <i class="fa fa-users"></i> <span>Users</span>
                            <span class="pull-right-container">
                                <small class="label pull-right bg-green">@Session["numMembers"]</small>
                            </span>
                            <ul class="treeview-menu">
                                <li><a href="~/Users/ViewUsers"><i class="fa fa-circle-o"></i> View</a></li>
                            </ul>
                        </a>
                    </li>

                    <li class="active">
                        <a href="pages/calendar.html">
                            <i class="fa fa-archive"></i> <span>Organizations</span>
                            <span class="pull-right-container">
                                <small class="label pull-right bg-green">@Session["numOrg"]</small>
                            </span>
                            <ul class="treeview-menu">
                                <li class="active"><a href="~/Organizations/ViewOrganizations"><i class="fa fa-circle-o"></i> View</a></li>
                                <li><a href="~/Organizations/AddOrganizations"><i class="fa fa-circle-o"></i>Add</a></li>
                            </ul>
                        </a>
                    </li>

                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Modal Items-->
        <div class="container">
            <div class="row">
                <div class="modal fade" id="contact" tabindex="-1" role="dialog" aria-labelledby="contactLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h4 class="panel-title" id="contactLabel"><span class="glyphicon glyphicon-info-sign"></span> Update RSO</h4>
                            </div>

                            <form action="#" method="post" accept-charset="utf-8">
                                <div class="modal-body" style="padding: 5px;">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                                            <input class="form-control" name="firstname" placeholder="Name" type="text" required autofocus />
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6" style="padding-bottom: 10px;">
                                            <input class="form-control" name="lastname" placeholder="Contact Person" type="text" required />
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                                            <input class="form-control" name="email" placeholder="Contact E-mail" type="text" required />
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                                            <input type="text" placeholder="Contact Phone" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <label>School</label>
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                                            <select class="form-control">
                                                @foreach (var item in ViewBag.schools)
                                                {
                                                    <option value="@item.id">@item.name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="padding-bottom: 10px;">
                                            <select class="form-control">
                                                <option>Type</option>
                                                <option value="1">Religious</option>
                                                <option value="2">Political</option>
                                                <option value="3">Academic</option>
                                                <option value="4">Recreational</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                            <textarea style="resize:vertical;" class="form-control" placeholder="Description" rows="6" name="comment" required></textarea>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                            <input type="text" class="form-control" placeholder="Member 1">
                                            <input type="text" class="form-control" placeholder="Member 2">
                                            <input type="text" class="form-control" placeholder="Member 3">
                                            <input type="text" class="form-control" placeholder="Member 4">
                                            <input type="text" class="form-control" placeholder="Member 5">
                                            <input type="text" class="form-control" placeholder="Member 6">
                                            <input type="text" class="form-control" placeholder="Member 7">
                                            <input type="text" class="form-control" placeholder="Member 8">
                                            <input type="text" class="form-control" placeholder="Member 9">
                                            <input type="text" class="form-control" placeholder="Member 10">
                                        </div>
                                    </div>

                                </div>
                            </form>

                            <div class="panel-footer" style="margin-bottom:-14px;">
                                <input type="submit" class="btn btn-success" value="Update" />
                                <!--<span class="glyphicon glyphicon-ok"></span>-->
                                <input type="reset" class="btn btn-danger" value="Clear" />
                                <!--<span class="glyphicon glyphicon-remove"></span>-->
                                <button style="float: right;" type="button" class="btn btn-default btn-close" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Registered Student Organizations(RSOs)
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li><a href="#">RSOs</a></li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <!-- /.box-header -->
                            <div class="box-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>School</th>
                                            <th>Type</th>
                                            <th>Point of Contact</th>
                                            <th>Contact Number</th>
                                            <th>Total Members</th>
                                            <th>Options</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        @foreach (var item in ViewBag.rsos)
                                        {
                                            <tr>
                                                <td>@item.name</td>
                                                <td>@item.schoolName</td>
                                                <td>@item.type</td>
                                                <td>@item.contactEmail</td>
                                                <td>@item.contactPhone</td>
                                                <td>@item.count</td>
                                                <td>
                                                    @using (Html.BeginForm("DeleteRSO", "Organizations"))
                                                    {
                                                        <button id="DeleteBtn" value="@item.id" name="DeleteBtn" type="submit" class="btn btn-danger">Delete</button>
                                                    }
                                                    <button id="ModifyBtn" value="@item.id" name="ModifyBtn" type="submit" class="btn btn-primary" data-toggle="modal" data-target="#Update">Update</button>

                                                    @using (Html.BeginForm("JoinRSO", "Organizations"))
                                                    {
                                                        <button id="JoinBtn" value="@item.id" name="JoinBtn" type="submit" class="btn btn-danger">Join</button>
                                                    }
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.box-body -->
                        </div>
                        <!-- /.box -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2017 <a href="#">College Event Planner</a>.</strong> All rights
            reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li><a href="#control-sidebar-home-tab" data-toggle="tab"><i class="fa fa-home"></i></a></li>
            </ul>
