            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-6">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Enter the New Organization's Details</h3>
                            </div>
                            <!-- /.box-header -->
                            <!-- form start -->
                            <form method="post" role="form">
                                <div class="box-body">


                                    <!--POPULATE FROM DATABASE-->
                                    <div class="form-group">
                                        <label>School</label>
                                        <select id="SchoolName" name="SchoolName" class="form-control">
                                            @foreach(var item in ViewBag.schools)
                                            {
                                                <option value="@item.id">@item.name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter name">
                                    </div>
                                    <div class="form-group">
                                        <label>Type</label>
                                        <select id="Type" name="Type" class="form-control">
                                            <option value="1">Religious</option>
                                            <option value="2">Political</option>
                                            <option value="3">Academic</option>
                                            <option value="4">Recreational</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Description</label>
                                        <textarea id="Desc" name="Desc" class="form-control" rows="3" placeholder="What is this organization about?"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="ContactName">Contact Person (Event Manager)</label>
                                        <input type="text" class="form-control" id="ContactName" name="ContactName" placeholder="Enter Point of Contact">
                                    </div>

                                    <label>Add new members (minimum of 5)</label>
                                    <select class="form-control" id="NumMem" name="NumMem" onchange="reveal()">
                                        <option value=0>Select How Many Members to add to new RSO</option>
                                        <option value=1>5</option>
                                        <option value=2>6</option>
                                        <option value=3>7</option>
                                        <option value=4>8</option>
                                        <option value=5>9</option>
                                        <option value=6>10</option>
                                    </select>
                                    <br>
                                    <div id="mydiv1" style="display:none">
                                        <input id="Mem1" name="Mem1" type="text" class="form-control" placeholder="Enter new member's name">
                                        <input id="Mem2" name="Mem2" type="text" class="form-control" placeholder="Enter new member's name">
                                        <input id="Mem3" name="Mem3" type="text" class="form-control" placeholder="Enter new member's name">
                                        <input id="Mem4" name="Mem4" type="text" class="form-control" placeholder="Enter new member's name">
                                        <input id="Mem5" name="Mem5" type="text" class="form-control" placeholder="Enter new member's name">
                                        <input id="Mem6" name="Mem6" type="text" class="form-control" placeholder="Enter new member's name" disabled="disabled">
                                        <input id="Mem7" name="Mem7" type="text" class="form-control" placeholder="Enter new member's name" disabled="disabled">
                                        <input id="Mem8" name="Mem8" type="text" class="form-control" placeholder="Enter new member's name" disabled="disabled">
                                        <input id="Mem9" name="Mem9" type="text" class="form-control" placeholder="Enter new member's name" disabled="disabled">
                                        <input id="Mem10" name="Mem10" type="text" class="form-control" placeholder="Enter new member's name" disabled="disabled">
                                        <br />
                                    </div>
                                    <script type="text/javascript">
                                        function reveal() {

                                            var p = document.getElementById("NumMem").value;

                                            document.getElementById("mydiv1").style.display = "block"
                                            document.getElementById("Mem6").disabled = (p <= 1);
                                            document.getElementById("Mem7").disabled = (p <= 2);
                                            document.getElementById("Mem8").disabled = (p <= 3);
                                            document.getElementById("Mem9").disabled = (p <= 4);
                                            document.getElementById("Mem10").disabled = (p <= 5);

                                            if (p > 6 || p < 1)
                                                document.getElementById("mydiv1").style.display = "none"


                                        }
                                    </script>
                                    <div class="form-group">
                                        <label>Contact Phone:</label>
                                        <div class="input-group">
